{{#if productos}}
    
    <div>
        <table  border="1" align="center">
            <thead>
                <tr>
                    <th>PRODUCTO</th>
                    <th>PRECIO</th>
                    <th>PORTADA</th>
                </tr>
            </thead>
    {{#each productos}}
        <tr> 
            <td><strong>{{this.title}}</strong></td>
            <td>ARS${{this.price}}</td>
            <td><img alt="item img" src="{{this.thumbnail}}" width="100px" height="100px"/></td>
        </tr>
    {{/each}}
    </table>
    </div>
    {{else}}
    <p>No hay productos cargados</p>
{{/if}}
